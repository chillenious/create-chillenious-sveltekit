{
  "name": "@{{PROJECT_NAME}}/web",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "svelte-kit-sync": "svelte-kit sync",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:component": "bun build:tag:dev --tag=$npm_config_tag && bun serve:tag --tag=$npm_config_tag",
    "clean:tag": "rimraf dist/$npm_config_tag",
    "clean:tags": "rimraf dist/pie-*",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "@iconify/json": "^2.2.323",
    "@iconify/tailwind4": "^1.0.6",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@{{PROJECT_NAME}}/datastore": "workspace:*",
    "@{{PROJECT_NAME}}/logger": "workspace:*",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.21.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.8",
    "arctic": "^2.3.0",
    "tailwindcss": "^4.1.8",
    "daisyui": "^5.0.40",
    "esm-env": "^1.2.2",
    "svelte": "^5.33.5",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-plugin-svelte": "^3.9.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rimraf": "^6.0.1",
    "svelte-check": "^4.2.1",
    "svelte-eslint-parser": "^0.41.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=24"
  }
}
