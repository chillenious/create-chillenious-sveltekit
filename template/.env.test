# all-local settings
NODE_ENV=test
PORT=8080

# Database Configuration (for application and Docker mapping)
DB_HOST=localhost
DB_PORT=5433
DB_USER={{PROJECT_NAME}}-test-user
DB_PASSWORD={{PROJECT_NAME}}-test-password
DB_NAME={{PROJECT_NAME}}_test_db

# Optional: Pool configuration
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Optional: SSL configuration (for application, see config.ts)
# DB_SSL=false # set to true to enable SSL (uses rejectUnauthorized: false by default)
# DB_SSL_REJECT_UNAUTHORIZED=true

# PostgreSQL specific (used by Docker volume)
POSTGRES_DATA_DIR=./.pgdata_test

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@{{PROJECT_NAME}}-test.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5051
PGADMIN_DATA_DIR=./pgadmin_data_test 