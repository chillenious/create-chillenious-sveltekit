{
  "name": "@{{PROJECT_NAME}}/cli",
  "version": "0.0.1",
  "description": "CLI scripts for {{PROJECT_NAME}} project",
  "author": "chillenious",
  "type": "module",
  "bin": {
    "{{PROJECT_NAME}}-cli": "./bin/run.ts"
  },
  "main": "src/index.ts",
  "files": ["/bin", "/src", "/oclif.manifest.json"],
  "scripts": {
    "build": "echo 'No build needed - Bun runs TypeScript natively'",
    "clean": "echo 'No dist folder to clean'",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "start": "bun run ./bin/run.ts"
  },
  "dependencies": {
    "@oclif/core": "^4.0.36",
    "@oclif/plugin-help": "^6.2.18",
    "@oclif/plugin-plugins": "^5.4.21"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/node": "^22.15.21",
    "eslint": "^9.17.0",
    "oclif": "^4.15.33",
    "typescript": "^5.8.3"
  },
  "oclif": {
    "bin": "{{PROJECT_NAME}}-cli",
    "dirname": "{{PROJECT_NAME}}",
    "commands": "./src/commands",
    "plugins": ["@oclif/plugin-help", "@oclif/plugin-plugins"],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
