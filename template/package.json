{
  "name": "{{PROJECT_NAME}}",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "private": true,
  "scripts": {
    "db:migrate": "bun --env-file=.env --cwd packages/datastore migrate",
    "db:migrate:test": "bun --env-file=.env.test --cwd packages/datastore migrate:test",
    "test": "bun run db:migrate:test && bun --env-file=.env.test test --recursive",
    "cli": "bun --env-file=.env run --cwd tools/cli ./bin/run.ts",
    "format": "biome format --write . && cd apps/web && bun run format",
    "format:check": "biome format . && cd apps/web && bun run format:check",
    "lint": "biome lint . && cd apps/web && bun run lint",
    "lint:fix": "biome lint --write . && cd apps/web && bun run lint:fix",
    "check": "biome check --write . && cd apps/web && bun run check",
    "web": "bun --env-file=.env run --cwd apps/web dev",
    "seed:dev": "bun --env-file=.env --cwd packages/datastore src/seeds/dev-seed.ts",
    "seed:test": "bun --env-file=.env.test --cwd packages/datastore src/seeds/test-seed.ts",
    "db:dev:up": "docker-compose -f docker-compose.yml up -d",
    "db:dev:down": "docker-compose -f docker-compose.yml down",
    "db:test:up": "docker-compose --env-file .env.test -f docker-compose.test.yml up -d",
    "db:test:down": "docker-compose --env-file .env.test -f docker-compose.test.yml down",
    "db:test:reset": "bun run db:test:down && docker-compose --env-file .env.test -f docker-compose.test.yml rm -sfv && bun run db:test:up",
    "db:seed": "echo \"Seeding script to be implemented\""
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.21",
    "husky": "9.1.7",
    "lint-staged": "^16.0.0",
    "semantic-release": "^24.2.4",
    "typescript": "^5.8.3"
  },
  "author": "chillenious",
  "engines": {
    "node": ">=24"
  },
  "packageManager": "bun@1.1.34",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ]
}
